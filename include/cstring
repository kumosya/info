#ifndef LIBCPP_CSTRING_H
#define LIBCPP_CSTRING_H

/* Minimal <cstring> for freestanding builds.
   Includes the C <string.h> definitions and brings common functions
   and `size_t` into namespace std for C++ code. */

#include <string.h>

#ifdef __cplusplus
namespace std {
using ::size_t;
using ::memcmp;
using ::memcpy;
using ::memmove;
using ::memchr;
using ::memset;
using ::strcpy;
using ::strncpy;
using ::strcat;
using ::strncat;
using ::strchr;
using ::strrchr;
using ::strcspn;
using ::strspn;
using ::strpbrk;
using ::strstr;
using ::strlen;
using ::strcmp;
using ::strncmp;
using ::strcoll;
using ::strtok;
}
#endif /* __cplusplus */

#endif /* LIBCPP_CSTRING_H */
