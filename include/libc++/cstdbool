#ifndef LIBCPP_CSTDBOOL_H
#define LIBCPP_CSTDBOOL_H

/* Minimal <cstdbool> for freestanding builds. C++ has a built-in
   `bool` type so this header simply includes the C header to provide
   macros like `true`/`false` for C compatibility when needed. */

#include <stdbool.h>

#endif /* LIBCPP_CSTDBOOL_H */
