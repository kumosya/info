#ifndef LIBCPP_STRING_H
#define LIBCPP_STRING_H

#include <vector>
#include <stddef.h>
#include <initializer_list>

namespace std {

class string {
    vector<char> buf;
public:
    using size_type = size_t;
    string() noexcept {}
    string(const char* s) {
        const char* p = s; while (*p) ++p;
        size_t n = p - s;
        buf.reserve(n+1);
        for (size_t i=0;i<n;++i) buf.push_back(s[i]);
        buf.push_back('\0');
    }
    size_type size() const noexcept { return buf.size() ? buf.size() - 1 : 0; }
    const char* c_str() const noexcept { return buf.size() ? &buf[0] : ""; }
};

} // namespace std

#endif // LIBCPP_STRING_H
