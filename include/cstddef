#ifndef LIBCPP_CSTDDEF_H
#define LIBCPP_CSTDDEF_H

/* Minimal <cstddef> for freestanding x86_64 kernel build.
   Includes the C <stddef.h> definitions and brings common types
   into namespace std. */

#include <stddef.h>

#ifdef __cplusplus
namespace std {
using ::size_t;
using ::ptrdiff_t;

/* Provide nullptr_t in C++11+ using decltype(nullptr). Don't rely on
   a C ::nullptr_t symbol (not available in C). */
using nullptr_t = decltype(nullptr);
}
#endif /* __cplusplus */

#endif /* LIBCPP_CSTDDEF_H */
