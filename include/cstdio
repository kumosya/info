#ifndef LIBCPP_CSTDIO_H
#define LIBCPP_CSTDIO_H

/* Minimal <cstdio> for freestanding builds.
   Includes the C <stdio.h> definitions and brings the FILE type and
   common streams into namespace std. Function declarations remain
   available in the global namespace. */

#include <stdio.h>

#ifdef __cplusplus
namespace std {
using ::FILE;
#ifndef stdin
using ::stdin;
#endif
#ifndef stdout
using ::stdout;
#endif
#ifndef stderr
using ::stderr;
#endif
}
#endif /* __cplusplus */

namespace std {
using ::fclose;
using ::fflush;
using ::fgetc;
using ::fgets;
using ::fopen;
using ::fprintf;
using ::fputc;
using ::fputs;
using ::fread;
using ::fscanf;
using ::fseek;
using ::ftell;
using ::fwrite;
using ::scanf;
using ::getchar;
using ::gets;
using ::printf;
using ::vsprintf;
using ::sprintf;
using ::putc;
using ::puts;
using ::fread;
using ::rewind;
using ::scanf;
using ::fseek;
using ::ftell;
using ::fwrite;
}

#endif /* LIBCPP_CSTDIO_H */
